{% extends 'base.html.twig' %}

{% block title %}Nouvelle entrée{% endblock %}

{% block stylesheets %}{{ encore_entry_link_tags('chef-entrees') }}{% endblock %}

{% block body %}

<div class="container">
  <h1 class="mb-4">Nouvelle entrée</h1>

  {% for label, messages in app.flashes %}
    {% for message in messages %}
      <div class="alert alert-{{ label }}" role="alert">{{ message }}</div>
    {% endfor %}
  {% endfor %}

  <form method="post">
    <div class="card">
      <div class="card-body">
        <div class="mb-3">
          <label for="name" class="form-label">Nom *</label>
          <input type="text" id="name" name="name" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea id="description" name="description" class="form-control" rows="3"></textarea>
        </div>
      </div>
      <div class="card-footer">
        <button type="submit" class="btn btn-success">Créer</button>
        <a href="{{ path('chef_entrees') }}" class="btn btn-outline-danger">Annuler</a>
      </div>
    </div>
  </form>
</div>

{% endblock %}

{% block javascripts %}{{ encore_entry_script_tags('chef-entrees') }}{% endblock %}

